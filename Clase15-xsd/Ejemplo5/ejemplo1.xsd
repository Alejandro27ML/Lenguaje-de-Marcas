<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="usuario">
        <!-- Las restricciones solo se aplican en 
         elementos simples -->
         <xs:simpleType>
            <!-- No se pone Type, se pone base en
             las restricciones -->
            <xs:restriction base="xs:string">
                <!-- Usuario tiene que tener entre 5 y 12 
                 caracteres. -->
                <xs:minLength value="5"/>
                <xs:maxLength value="12"/>
            </xs:restriction>
         </xs:simpleType>
        
    </xs:element>
</xs:schema>